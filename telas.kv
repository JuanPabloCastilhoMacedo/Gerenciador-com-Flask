Gerenciador:
    LoginScreen:
    RegistroScreen:

<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Login"
            font_size: 32

        TextInput:
            id: email
            hint_text: "Email"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Senha"
            password: True
            multiline: False

        Button:
            text: "Entrar"
            size_hint_y: None
            height: 48
            on_release: root.fazer_login()

        Label:
            id: msg
            text: ""
            color: 1,0,0,1

        Button:
            text: "Não tem conta? Registre-se"
            size_hint_y: None
            height: 40
            on_release:
                app.root.current = "registro"

<RegistroScreen>:
    name: "registro"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "Registro"
            font_size: 32

        TextInput:
            id: email
            hint_text: "Email"
            multiline: False

        TextInput:
            id: senha
            hint_text: "Senha"
            password: True
            multiline: False

        TextInput:
            id: confirmar
            hint_text: "Confirme a senha"
            password: True
            multiline: False

        Button:
            text: "Registrar"
            size_hint_y: None
            height: 48
            on_release: root.fazer_registro()

        Label:
            id: msg
            text: ""
            color: 1,0,0,1

        Button:
            text: "Já tem conta? Faça login"
            size_hint_y: None
            height: 40
            on_release:
                app.root.current = "login"
